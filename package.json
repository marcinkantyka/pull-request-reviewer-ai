{
    "name": "local-pr-reviewer",
    "version": "1.0.0",
    "description": "AI-powered branch code review running 100% locally on your M3 Mac - optimized for JavaScript/TypeScript",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
      "review-pr": "./dist/index.js"
    },
    "scripts": {
      "build": "tsc",
      "dev": "tsc --watch",
      "review": "npm run build && node dist/index.js",
      "setup": "npm install && npm run build",
      "test": "npm run build",
      "test:ci": "npm install && npm run build",
      "clean": "rm -rf dist node_modules",
      "rebuild": "./scripts/rebuild.sh",
      "watch": "./scripts/watch.sh",
      "docker:build": "docker-compose build",
      "docker:up": "docker-compose up -d ollama",
      "docker:down": "docker-compose down",
      "docker:logs": "docker-compose logs -f",
      "model:pull": "./scripts/model-pull.sh",
      "model:list": "docker-compose exec ollama ollama list"
    },
    "keywords": [
      "code-review",
      "ai",
      "llm",
      "typescript",
      "javascript",
      "pr-review",
      "local",
      "privacy",
      "ollama",
      "qwen"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
      "ollama": "^0.5.9"
    },
    "devDependencies": {
      "@types/node": "^20.11.0",
      "typescript": "^5.3.3"
    },
    "engines": {
      "node": ">=20.0.0",
      "npm": ">=10.0.0"
    },
    "repository": {
      "type": "git",
      "url": ""
    }
  }